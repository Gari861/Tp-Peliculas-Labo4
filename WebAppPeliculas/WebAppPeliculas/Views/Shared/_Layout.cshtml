<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Laboratorio de Computación IV</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOM4g2b1E8Qbn6XnN/WIp0OgPsnHqZ4X6F82mY5" crossorigin="anonymous" />
    <style>
        body {
            background-color: #f8f9fa;
            color: #212529;
        }

        .navbar {
            background-color: #0d6efd;
        }

        footer {
            background-color: #0d6efd;
            color: white;
        }

            footer a {
                color: #ffc107;
            }

        .btn-outline-light:hover {
            background-color: #ffc107;
            color: #0d6efd;
        }

        .header-title {
            font-size: 1.5rem;
            color: #ffc107;
        }
    </style>
</head>
<body>

    <!-- Header with Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="WebAppPeliculas" class="me-2" style="height: 40px;">
                    <span class="header-title">Laboratorio de Computación IV</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/Peliculas/Index">Películas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/Generos/Index">Géneros</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/Actores/Index">Actores</a>
                        </li>
                    </ul>
                    <form class="d-flex" asp-area="" asp-controller="Peliculas" asp-action="Buscar">
                        <input class="form-control me-2" type="search" placeholder="Buscar película..." aria-label="Buscar">
                        <button class="btn btn-outline-light" type="submit">Buscar</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            <h1 class="text-center mb-4">Trabajo Práctico - CRUD de Películas, Actores y Géneros</h1>
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="mt-5">
        <div class="container p-4">
            <div class="row">
                <!-- About -->
                <div class="col-lg-4 col-md-6 mb-4 mb-md-0">
                    <h5 class="text-uppercase">Laboratorio de Computación IV</h5>
                    <p>
                        Proyecto desarrollado para el manejo de películas, actores y géneros, permitiendo operaciones CRUD.
                    </p>
                    <img src="~/images/movies.jpg" alt="Películas" class="img-fluid rounded" style="max-height: 150px;">
                </div>

                <!-- Quick Links -->
                <div class="col-lg-2 col-md-4 mb-4 mb-md-0">
                    <h5 class="text-uppercase">Navegación</h5>
                    <ul class="list-unstyled">
                        <li><a href="/Peliculas/Index" class="text-white">Películas</a></li>
                        <li><a href="/Generos/Index" class="text-white">Géneros</a></li>
                        <li><a href="/Actores/Index" class="text-white">Actores</a></li>
                    </ul>
                    <img src="~/images/genres.jpg" alt="Géneros" class="img-fluid rounded" style="max-height: 150px;">
                </div>

                <!-- Contact Us -->
                <div class="col-lg-4 col-md-6 mb-4 mb-md-0">
                    <h5 class="text-uppercase">Contáctanos</h5>
                    <ul class="list-unstyled">
                        <li><a href="mailto:contacto@webapp.com" class="text-white">Email: contacto@webapp.com</a></li>
                        <li><a href="tel:+1234567890" class="text-white">Teléfono: +123 456 7890</a></li>
                    </ul>
                    <img src="~/images/actors.jpg" alt="Actores" class="img-fluid rounded" style="max-height: 150px;">
                </div>

                <!-- Social Media -->
                <div class="col-lg-2 col-md-4 mb-4 mb-md-0">
                    <h5 class="text-uppercase">Síguenos</h5>
                    <a href="#" class="btn btn-outline-light btn-sm"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="btn btn-outline-light btn-sm"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="btn btn-outline-light btn-sm"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
        </div>
        <div class="text-center p-3 bg-dark">
            &copy; 2024 Laboratorio de Computación IV
            <a class="text-white" href="/Home/Privacy">Política de privacidad</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.carousel').carousel({
                interval: 2000 // Cambia la imagen cada 2 segundos
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
