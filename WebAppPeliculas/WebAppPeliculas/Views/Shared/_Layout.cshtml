<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CineWebApp</title>

    <!-- Bootstrap CSS y FontAwesome -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <style>
        body {
            background-color: #0d253f; /* Azul oscuro para un ambiente de cine */
            color: #ffffff;
        }

        .navbar-custom {
            background-color: #1b2a49; /* Azul más claro para destacar */
        }

        .navbar-brand {
            font-size: 1.8rem;
            color: #ffc107; /* Amarillo para resaltar */
        }

        .navbar-nav .nav-link {
            color: #ffffff;
            margin-right: 15px;
            font-size: 1.2rem;
        }

        .nav-link.nav-highlight {
            background-color: #ffc107;
            color: #1b2a49;
            padding: 10px 15px;
            border-radius: 5px;
        }

        .btn-primary-custom {
            background-color: #ffc107;
            border-color: #ffc107;
            color: #1b2a49;
            font-weight: bold;
        }

        .main-content {
            padding: 50px 0;
        }

        footer {
            background-color: #1b2a49;
            color: #ffffff;
            padding: 20px 0;
        }

            footer a {
                color: #ffc107;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }

        /* Imágenes de cartelera */
        .card img {
            max-height: 250px;
            object-fit: cover;
        }

        /* Botón para comprar entradas */
        .buy-btn {
            background-color: #ffc107;
            color: #1b2a49;
            border: none;
            padding: 10px;
            font-size: 1rem;
            font-weight: bold;
        }

            .buy-btn:hover {
                background-color: #ffca2c;
            }
    </style>
</head>
<body>
    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom shadow-sm">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <i class="fas fa-film"></i> CineWebApp
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link nav-highlight" href="Peliculas"><i class="fas fa-ticket-alt"></i> Cartelera</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="Generos"><i class="fas fa-th-list"></i> Géneros</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="Actores"><i class="fas fa-users"></i> Actores</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container main-content">
        <main role="main">
            @RenderBody() <!-- AQUÍ se inyectará el contenido de las vistas -->
        </main>
    </div>

    <!-- Footer -->
    <footer>
        <div class="container text-center">
            <p>&copy; 2024 CineWebApp | <a href="/Home/Privacy">Política de Privacidad</a></p>
        </div>
    </footer>

    <!-- Scripts -->
    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
