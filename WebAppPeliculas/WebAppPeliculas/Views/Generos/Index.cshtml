@model IEnumerable<WebAppPeliculas.Models.Genero>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h1 class="display-4">Géneros</h1>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-primary">Crear Nuevo Género</a>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th class="text-end">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@item.IdGenero" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.IdGenero" class="btn btn-sm btn-info">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.IdGenero" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
